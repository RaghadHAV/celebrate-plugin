{
  "manifest_version": 2,
 
  "name": "Task Complete Celebration",
  "version": "0.1.0",
  "description": "Celebrate your tasks completion with Bloom",
   
        "permissions": [
          "contextMenus"
        ],

   "background": {
    "scripts": ["jquery.js", "background.js"],
    "persistent": false
  },

        "icons": {
          "16": "icon-bitty.png"
        },
        "permissions": [
    "webNavigation"
  ],
  "web_accessible_resources": [
    "celebration.html"
  ],
  

  "content_scripts": [{
    "css": ["styles.css", "celebration.css"],
    "js": ["jquery.js","content.js", "jquery.wheelgame.js"],
    "matches": ["http://127.0.0.1/*"]
  }]
 
}